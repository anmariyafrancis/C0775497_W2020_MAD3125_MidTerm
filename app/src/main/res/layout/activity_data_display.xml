                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textColor="#0C0C0C"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="5dp"
